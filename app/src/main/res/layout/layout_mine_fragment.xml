<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deepGray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="以下均为摆设"
            android:textSize="20sp"
            android:background="@color/gray"
            android:layout_gravity="center"
            android:gravity="center" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="40dp"
            android:id="@+id/mine_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/xiugou" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="一只小修勾"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="收藏"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="评论"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_history"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="观看记录"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_my_pay"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我的关注"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_my_load"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我的下载"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_my_nb"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我的点赞"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_my_face"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我的皮肤"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_my_money"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我的金币"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
</layout>